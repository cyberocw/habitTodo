<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/llTimerWrap"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재로부터 지정 시간 후 알림"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_small">

            <NumberPicker
                android:id="@+id/addAlarmHourPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="시간"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <NumberPicker
                android:id="@+id/addAlarmMinutePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="분"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RelativeLayout
                android:layout_width="116dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnResetTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초기화"
                    android:layout_marginTop="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <Button
                    android:id="@+id/btnRandomTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="랜덤"
                    android:layout_below="@+id/btnResetTime"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_small">

            <Button
                android:id="@+id/btn10minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10분" />

            <Button
                android:id="@+id/btn20minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20분" />

            <Button
                android:id="@+id/btn30minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30분" />

            <Button
                android:id="@+id/btn12hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12시간" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>